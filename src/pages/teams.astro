---
import DefaultLayout from '../layouts/DefaultLayout.astro'

const { gkr = '/src/assets/img/GKR.png' } = Astro.props
const { cw = '/Loading screen Clan Wars 2.png' } = Astro.props
---

<DefaultLayout title="Teams">
  <section class="my-12">
    <div class="space-content container">
      <h1>Our Teams</h1>
      <p class="text-2xl block">
        
      </p>
    </div>
  </section>
  <section class="mb-12 mt-32">
    <div class="container">
      <div class="grid grid-cols-1 gap-32 md:grid-cols-2">
       <a class="flex flex-col bg-white border shadow-sm rounded-xl hover:shadow-lg sm:2/12 md:w-4/12 transition dark:bg-gray-800 dark:border-gray-700 dark:shadow-slate-700/[.7]" style="text-decoration: none;" href="/team-cr">
          <img class="w-full h-auto rounded-t-xl" src={cw} alt="CR">
          <div class="p-4 md:p-5">
          <h3 class="text-lg font-bold text-gray-800 dark:text-white">
          Clash Royale
          </h3>
          <p class="mt-1 text-gray-800 dark:text-gray-400">
            We have a professional Clash Royale Team with Clash Royale Pro Players.
          </p>
        </div>
        </a>
      </div>
    </div>
  </section>
</DefaultLayout>
