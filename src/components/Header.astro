---
import Navigation from '../components/Navigation.astro'
import { SkipLinks } from 'accessible-astro-components'
import { Icon } from 'astro-icon'
---

<header>
  <SkipLinks />
  <Navigation>
    <li class="menu-item">
      <a href="/">Home</a>
    </li>
    <li class="menu-item has-dropdown">
      <button aria-haspopup="true" aria-expanded="false">About</button>
      <ul class="dropdown-menu">
        <li class="submenu-item">
          <a href="/matches">Merchandise</a>
        </li>
        <li class="submenu-item">
          <a href="/matches/">Matches</a>
        </li>
        <li class="submenu-item">
          <a href="/organization">Organization</a>
        </li>
      </ul>
    </li>
    <li class="menu-item">
      <a href="/sponsorship-program" title="Sponsorship Program" rel="external noopener noreferrer">Sponsorship Program</a>
    </li>
    <li class="menu-item type-icon">
      <a href="https://twitter.com/HigherGamingEU" title="Go to the Twitter page">
        <Icon pack="ion" name="logo-twitter" />
      </a>
    </li>
  </Navigation>
</header>

<style lang="scss" is:global>
  @use '../assets/scss/base/outline' as *;

  header {
    .type-icon a {
      display: block;

      [astro-icon] {
        margin-top: -4px;
        width: 30px;

        path {
          fill: var(--action-color);
          transition: fill 0.2s ease-in-out;
        }
      }

      &:hover {
        [astro-icon] path {
          fill: var(--action-color-state);
        }
      }
    }
  }
</style>
